.pager-wrapper
  position relative
  margin 40px 0

  &:before
    content ''
    position absolute
    display block
    width 320px
    height 0
    border-top 1px solid #666

  .pagers
    position relative
    display flex
    justify-content flex-start
    align-items flex-end
    padding 30px 0

    &>a
      display block
      padding 10px 20px
      color #333
      font-size 16px
      text-decoration none
      user-select none
      text-align center
      font-weight 600

      &.current
        color #000