.footer
  padding 5px
  width 100%
  font-size 14px
  background rgba(102, 51, 153, .02)
  border-top 1px solid #ddd

  .footer-inner
    display flex
    justify-content space-between
    align-items center
    margin 0 auto
    max-width 960px
    min-height 100px
    flex-shrink 0
    flex-wrap nowrap

    b
      font-size 16px
      font-weight 600

    p
      margin-top 10px
      font-size 14px
      line-height 1.45

    a
      color inherit
      text-decoration none

      &:hover
        color #05f

    .social
      a
        display inline-block
        margin-right 40px